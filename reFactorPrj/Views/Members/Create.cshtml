            <label>
                    <input type="checkbox" class="filled-in" checked="checked" />
                    <span>同意《會員條款與隱私政策》</span>
                </label>
        </div>*@
                        <div>
                            <div class="right-align">
                                <button class="btn waves-effect waves-light" type="submit" name="action">
                                    註冊
                                    <i class="material-icons right">send</i>
                                </button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
}

